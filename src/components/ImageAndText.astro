---
interface Props {
  src: string;
  a: string;
}
const {src} = Astro.props;
---
<div class="container">
  <img src={src}>
  <div class="text-container">
    <slot />
  </div>
</div>
<style>
  .container {
    margin: 0 auto;
    max-width: 1000px;
    padding: 2rem 1rem;
    display: flex;
    gap: 1rem;
  }
  img {
    width: 50%;
  }
  .text-container {
    background-color: var(--tertiary-color);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid black;
  }
  @media (max-width: 600px) {
    img, .text-container {
      flex: 1;
      width: 100%;
    }
    .text-container {
      border: none;
      background-color: inherit;
    }
    .container {
      gap: 0;
      padding: 0;
      flex-direction: column;
    }
  }
</style>